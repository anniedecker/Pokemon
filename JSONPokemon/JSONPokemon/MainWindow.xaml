<Window x:Class="JSONPokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSONPokemon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtPokemon" HorizontalAlignment="Left" Height="26" Margin="400,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144"/>
        <Button x:Name="btnInfo" Content="More Info" HorizontalAlignment="Left" Height="57" Margin="334,174,0,0" VerticalAlignment="Top" Width="144" Click="BtnInfo_Click" RenderTransformOrigin="0.365,0.469"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="253,106,0,0" TextWrapping="Wrap" Text="Enter a pokemon:" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.36,0.644"/>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="113" Margin="273,276,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="269"/>

    </Grid>
</Window>
